{
  "name": "claude-docs",
  "version": "1.2.4",
  "description": "Claude Code Documentation Manager - Node.js CLI",
  "private": true,
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "claude-docs": "dist/cli.js"
  },
  "scripts": {
    "dev": "node --experimental-strip-types --watch src/cli.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "build": "tsc --project tsconfig.build.json && cp claude-docs-resources.json dist/",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "validate": "pnpm run check && pnpm run type-check && pnpm run test:run",
    "start": "node dist/cli.js",
    "bench": "time node dist/cli.js --version && time node dist/cli.js --help",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "keywords": [
    "cli",
    "documentation",
    "claude",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist/**/*.js",
    "dist/claude-docs-resources.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "commander": "14.0.2",
    "diff": "8.0.2",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "2.29.7",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "4.0.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  }
}
